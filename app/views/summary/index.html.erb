<p>
  <%= form_tag('/', method: 'get') do %>
    <%= label_tag(:show_only_flagged, 'View only flagged servers:') %>
    <%= check_box_tag(:show_only_flagged, 1, @opt['show_only_flagged']) %>
    <%= submit_tag('Search') %>
  <% end %>
</p>

<table id="server_list" class="display">
  <thead>
    <tr>
      <td>Host</td>
      <td>NetDB</td>
      <td>Resolves</td>
      <td>Cobbler</td>
      <td>PuppetDB</td>
      <td>VMWare</td>
      <td>Status</td>
      <td>Puppet Failure</td>
      <td>Puppet Quiet</td>
      <td>Advisories</td>
      <td>Highest Advisory</td>
      <td>OSSEC</td>
    </tr>
  </thead>
  <tbody>
    <% @servers.keys.sort.each do |hostname| %>
      <% next if @opt['show_only_flagged'] == 1 && @flags[hostname].empty? %>
      <tr>
        <td><%= hostname %></td>
        <td><%= asterisk(@servers[hostname]['netdb']) %></td>
        <td><%= asterisk(@servers[hostname]['alive']) %></td>
        <td class="<%= status_flag(@flags, hostname, 'cobbler') %>"><%= asterisk(@servers[hostname]['cobbler']) %></td>
        <td><%= asterisk(@servers[hostname]['puppetdb']) %></td>
        <td><%= asterisk(@servers[hostname]['vmware']) %></td>
        <td><%= status(check_child(@servers[hostname]['vmware'], 'status')) %></td>
        <td><%= asterisk(check_child(@servers[hostname]['puppetstate'], 'failed')) %></td>
        <td><%= check_child(@servers[hostname]['puppetstate'], 'too_quiet') %></td>
        <td class="<%= status_flag(@flags, hostname, 'advisories') %>"><%=
          if @servers[hostname].key?('advisories') && @servers[hostname]['advisories']['count'] > 0
            link_to(@servers[hostname]['advisories']['count'], advisory_path(hostname))
          else
            '-'
          end
        %></td>
        <td><%= cvss_score_to_text(check_child(@servers[hostname]['advisories'], 'highest')) %></td>
        <td class="<%= status_flag(@flags, hostname, 'ossec') %>"><%=
          if @servers[hostname]['ossec']
            if @servers[hostname]['ossec'] > 0
              link_to(@servers[hostname]['ossec'], ossec_path(hostname))
            else
              @servers[hostname]['ossec']
            end
          else
            '-'
          end
        %></td>
      </tr>
    <% end %>
  </tbody>
</table>
